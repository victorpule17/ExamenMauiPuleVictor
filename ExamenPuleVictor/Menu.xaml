Padding="30,0"
Spacing="25">
        <Label
    Text="UNIVERSIDAD TÉCNICA DEL NORTE" 
    HorizontalOptions="Center"
    FontSize="Large"
    FontAttributes="Bold"        
    />

        <Label 
     Text="APLICACIONES MÓVILES" 
     HorizontalOptions="Center"
     FontSize="Large"
     FontAttributes="Bold"       
     />
